<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/ll_vehicledetail"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <!-- 车辆详情 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            style="@style/Table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:orientation="vertical">

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vehicl_data_txt_title"
                    style="@style/TableCell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="渝A53546"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white" />
            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="公司/车队" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/companyteam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="终端号" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/devicenum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="SIM卡号" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/simnum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="驾驶员姓名" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/drivername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />


            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="驾驶员电话" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/driverphone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="车身颜色" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/carcolor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />


            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="定位状态" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/locationstatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="车速(km/h)" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/carsudu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="方向" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/direction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="经纬度" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/longlat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="信号强度" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/tv_signal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="卫星数" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/wxs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="最近更新" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/updatetime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />
            <LinearLayout
                style="@style/TableCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="最近地址" />

                <include layout="@layout/layout_vertical_line" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="10dp"
                    android:textColor="@color/blue"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <include layout="@layout/layout_horizontal_line" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cellect"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/tv_trace"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="轨迹"
            android:textColor="@color/orange" />
        <TextView
            android:id="@+id/tv_capture"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="监控"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/tv_command"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="指令"
            android:textColor="@color/orange"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/orange"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_mile"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="里程"
            android:textColor="@color/orange" />

    </LinearLayout>


</LinearLayout>